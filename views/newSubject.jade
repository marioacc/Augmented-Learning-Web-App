div(id="modalNewSubject" class="modal")
    div(class="modal-content")
        .row
            form(action="/subject/new/"+userId method="post" class="col s12")
                h5 Crear Materia
                .row
                    div(class="input-field col s6")
                        label(for="name") Nombre de la Materia
                        input(id="name" type="text" class="validate" name="name")
                    div(class="input-field col s6")
                        select(value="" name="groupId" class="")
                            option(disabled selected) Seleccionar un grupo
                            each group in groups
                                option(value=group.groupId) #{group.groupData.group}
                        label Contenido
                button(class="btn waves-effect waves-light" type="submit" name="action") Agregar
                    i(class="material-icons right") send