extends ../shared/layout
block content
  div(class="fixed-action-btn horizontal click-to-toggle" style="bottom: 45px; right: 24px;")
    a(class="btn-floating btn-large red modal-trigger" href="#modalNewSubject")
      i(class="large material-icons") playlist_add
  .row
    .col.s12.m12
      .collection.with-header
        li.collection-header
          h5 Materias
        each element in subjectsByGroup
          a.collection-item(href= 'theme/#{element.subjectId}')
            span.title !{element.group.group }
            p !{element.subject.name}

    include create

