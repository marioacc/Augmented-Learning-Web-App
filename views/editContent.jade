include shared/layout
block content
    .row
        form(action="/content/edit?contentId=" + contentId+"&subjectId="+subjectId method="post" class="col s12")
            h5 Editar Contenido
            .row
                div(class="input-field col s6")
                    label(for="name") Nombre del contenido
                    input(id="name" type="text" class="validate" name="name" value=name required)
                div(class="input-field col s6")
                    label(for="description") Descripci√≥n
                    input(id="description" type="text" class="validate" name="description" value=description required)
                div(class="input-field col s6")
                    label(for="url") Direccion del contenido
                    input(type="url" id="url" name="url" value=content required)
            button(class="btn waves-effect waves-light" type="submit" name="action") Actualizar
                i(class="material-icons right") send
            div(class="col s12")
                h6 Vista del contenido
                iframe(id="contentView" src=content width="500em" height="500em")

